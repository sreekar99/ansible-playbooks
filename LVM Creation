---
 - hosts: dbhosts
   user: root
   tasks:
        - name: dbvg volume group creation
          lvg:
               vg: dbvg
               pvs: /dev/sdb

        - name: db00 lvm creation
          lvol:
               vg: dbvg
               lv: db00
               size: 2G

        - name: db01 lvm creation
          lvol:
               vg: dbvg
               lv: db01
               size: 2G

        - name: create file system for db00
          filesystem:
                fstype: ext4
                dev: /dev/dbvg/db00

        - name: mount db00 logical volumes
          mount:
                name: /db00
                src: /dev/dbvg/db00
                fstype: ext4
                state: mounted
